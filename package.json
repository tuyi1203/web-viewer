{
  "name": "web-viewer",
  "version": "1.0.0",
  "description": "悬浮网页收藏夹 - 一个精美的Windows桌面应用",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64 --ia32",
    "build:all": "electron-builder --win --x64 --ia32"
  },
  "keywords": [
    "electron",
    "bookmark",
    "floating",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.vibe.webviewer",
    "productName": "Nimbus Web Viewer",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "files": [
      "src/**/*",
      "settings.json",
      "package.json",
      "!logs/**",
      "!dist/**"
    ],
    "extraFiles": [
      "settings.json"
    ],
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}-portable.${ext}"
    }
  }
}
